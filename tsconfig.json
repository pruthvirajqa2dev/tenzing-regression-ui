{
    "compilerOptions": {
        "target": "ESNext", // Specify ECMAScript target version
        "module": "commonjs", // Specify module code generation
        "strict": true, // Enable all strict type-checking options
        "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
        "skipLibCheck": true, // Skip type checking of declaration files
        "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file
        "outDir": "dist", // Redirect output structure to the 'dist' directory
        "rootDir": ".", // Specify the root directory of input files
        "resolveJsonModule": true, // Include modules imported with .json extension
        "isolatedModules": true // Transpile each file as a separate module
    },
    "include": [
        "tests/**/*.ts", // Include all TypeScript files in the 'tests' directory
        "playwright.config.ts" // Include the Playwright configuration file
    ],
    "exclude": [
        "node_modules" // Exclude the 'node_modules' directory
    ]
}